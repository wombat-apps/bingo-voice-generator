# Sparkle auto-update configuration
# Copy this file to sparkle.env and fill in your values
# DO NOT commit sparkle.env to version control

# EdDSA public key (generated by Scripts/generate_sparkle_keys.sh)
SPARKLE_PUBLIC_ED_KEY=

# URL to your appcast.xml file
SPARKLE_FEED_URL=https://github.com/wombat-apps/bingo-voice-generator/releases/latest/download/appcast.xml

# URL prefix for downloading release archives (used by generate_appcast.sh)
DOWNLOAD_URL_PREFIX=https://github.com/wombat-apps/bingo-voice-generator/releases/download

# Set to 1 to enable Sparkle in builds
ENABLE_SPARKLE=1
